/* pages/posts/post-detail/post-detail.wxss */

.post-detail.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-data {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar-image {
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #666;
}

.publish {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.circle-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-image Image {
  width: 90rpx;
  height: 90rpx;
}

.collection-image {
  margin-left: 30rpx;
}

.horazon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: auto 0;
  z-index: -99;
}

.details {
  color: #666;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.music-play{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

